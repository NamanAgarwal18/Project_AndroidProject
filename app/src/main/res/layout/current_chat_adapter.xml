<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_dp_currentMessage"
        android:layout_height="60dp"
        android:layout_width="60dp"
        app:civ_border_color="@color/base2"
        app:civ_border_width="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_usernames_latestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Username"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/base3"
            />
        <TextView
            android:id="@+id/tv_text_latestMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="This is the actual text message. This is the second line of the text.This is the actual text message. This is the second line of the text."
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/base4"
            />
    </LinearLayout>

</LinearLayout>