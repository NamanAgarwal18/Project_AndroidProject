<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/base0">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/base1"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/etReply"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tvReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="abx"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/base3"
            android:padding="5dp"
            android:maxWidth="220dp"
            app:layout_constraintBottom_toTopOf="@id/etReply"
            />

    </androidx.cardview.widget.CardView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etReply"
        android:text=""
        android:textColor="@color/base3"
        android:textSize="22sp"
        android:hint="Enter the Reply"
        android:background="@color/base0"
        android:textColorHint="@color/base4"
        android:elevation="10dp"
        android:maxWidth="240dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardText"
        app:layout_constraintBottom_toTopOf="@id/btnReply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnReply"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Reply"
        android:textColor="@color/base0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners_buttons"
        app:layout_constraintTop_toBottomOf="@id/etReply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>